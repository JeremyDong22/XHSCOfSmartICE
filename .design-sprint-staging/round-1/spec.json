{
  "project": {
    "name": "XHS Multi-Account Scraper Dashboard",
    "description": "Redesign of the Xiaohongshu multi-account browser manager and scraper dashboard",
    "format": "nextjs",
    "framework": "Next.js 16 with React 19 and Tailwind CSS"
  },
  "designPhilosophy": {
    "inspiration": "Anthropic's sophisticated, intellectual aesthetic",
    "mood": "Clean & Minimal",
    "tone": "Modern Tech with warm, approachable undertones",
    "principles": [
      "Reduce visual noise, prioritize content",
      "Use whitespace strategically",
      "Subtle elevation through borders, not heavy shadows",
      "Monospace typography for data creates technical credibility",
      "Muted semantic colors that inform without demanding attention"
    ]
  },
  "colorPalette": {
    "backgrounds": {
      "base": { "hex": "#1C1917", "tailwind": "stone-900", "usage": "Page background" },
      "surface": { "hex": "#292524", "tailwind": "stone-800", "usage": "Cards, panels, elevated surfaces" },
      "border": { "hex": "#3D3835", "tailwind": "stone-700", "usage": "Borders, dividers" },
      "hover": { "hex": "#57534E", "tailwind": "stone-600", "usage": "Hover states, interactive elements" },
      "console": { "hex": "#000000", "tailwind": "black", "usage": "Terminal/console backgrounds only" }
    },
    "primary": {
      "default": { "hex": "#D97757", "usage": "Primary buttons, links, accents" },
      "hover": { "hex": "#E8886A", "usage": "Primary button hover" },
      "muted": { "rgba": "rgba(217, 119, 87, 0.15)", "usage": "Accent badges, highlights" },
      "border": { "rgba": "rgba(217, 119, 87, 0.25)", "usage": "Accent badge borders" }
    },
    "text": {
      "primary": { "hex": "#FAFAF9", "tailwind": "stone-50", "usage": "Headings, important text" },
      "strong": { "hex": "#E7E5E4", "tailwind": "stone-200", "usage": "Body text, labels" },
      "secondary": { "hex": "#A8A29E", "tailwind": "stone-400", "usage": "Descriptions, secondary info" },
      "muted": { "hex": "#78716C", "tailwind": "stone-500", "usage": "Timestamps, metadata" },
      "faint": { "hex": "#57534E", "tailwind": "stone-600", "usage": "Placeholders, disabled text" }
    },
    "semantic": {
      "success": {
        "bg": "rgba(16, 185, 129, 0.2)",
        "text": "#6EE7B7",
        "border": "rgba(16, 185, 129, 0.3)",
        "usage": "Active status, connected, success states"
      },
      "error": {
        "bg": "rgba(239, 68, 68, 0.2)",
        "text": "#FCA5A5",
        "border": "rgba(239, 68, 68, 0.3)",
        "usage": "Errors, stop buttons, failed states"
      },
      "info": {
        "bg": "rgba(59, 130, 246, 0.2)",
        "text": "#93C5FD",
        "border": "rgba(59, 130, 246, 0.3)",
        "usage": "Info messages, browser count"
      },
      "warning": {
        "bg": "rgba(245, 158, 11, 0.2)",
        "text": "#FCD34D",
        "border": "rgba(245, 158, 11, 0.3)",
        "usage": "Warnings, pending states, tasks running"
      }
    }
  },
  "typography": {
    "fontFamilies": {
      "heading": "'Inter', -apple-system, BlinkMacSystemFont, sans-serif",
      "body": "'Inter', -apple-system, BlinkMacSystemFont, sans-serif",
      "mono": "'JetBrains Mono', 'SF Mono', 'Consolas', monospace"
    },
    "googleFonts": [
      "Inter:wght@400;500;600;700",
      "JetBrains+Mono:wght@400;500;600"
    ],
    "scale": {
      "h1": { "size": "32px", "weight": 600, "letterSpacing": "-0.02em", "lineHeight": 1.2 },
      "h2": { "size": "24px", "weight": 600, "letterSpacing": "-0.02em", "lineHeight": 1.3 },
      "h3": { "size": "18px", "weight": 600, "letterSpacing": "-0.01em", "lineHeight": 1.4 },
      "body": { "size": "15px", "weight": 400, "lineHeight": 1.6 },
      "small": { "size": "13px", "weight": 400, "lineHeight": 1.5 },
      "label": { "size": "12px", "weight": 500, "textTransform": "uppercase", "letterSpacing": "0.1em" },
      "mono": { "size": "13px", "weight": 400, "lineHeight": 1.5 }
    },
    "usage": {
      "headings": "Inter with tight letter-spacing for modern feel",
      "bodyText": "Inter for readability",
      "dataValues": "JetBrains Mono for stats, counts, IDs",
      "timestamps": "JetBrains Mono in muted color",
      "sectionLabels": "JetBrains Mono uppercase with wide letter-spacing",
      "console": "JetBrains Mono for all log output"
    }
  },
  "spacing": {
    "scale": {
      "0": "0",
      "1": "4px",
      "2": "8px",
      "3": "12px",
      "4": "16px",
      "5": "20px",
      "6": "24px",
      "8": "32px",
      "10": "40px",
      "12": "48px",
      "16": "64px"
    },
    "componentGaps": {
      "buttonGroup": "12px",
      "cardStack": "24px",
      "sectionPadding": "32px",
      "gridGap": "16px"
    }
  },
  "components": {
    "buttons": {
      "primary": {
        "bg": "#D97757",
        "text": "white",
        "hoverBg": "#E8886A",
        "padding": "10px 20px",
        "borderRadius": "8px",
        "fontSize": "14px",
        "fontWeight": 500,
        "transition": "all 0.15s ease"
      },
      "secondary": {
        "bg": "#3D3835",
        "text": "#E7E5E4",
        "border": "1px solid #57534E",
        "hoverBg": "#57534E",
        "padding": "10px 20px",
        "borderRadius": "8px"
      },
      "semantic": {
        "description": "Use muted semantic colors with transparent backgrounds",
        "example": {
          "success": {
            "bg": "rgba(16, 185, 129, 0.2)",
            "text": "#6EE7B7",
            "border": "1px solid rgba(16, 185, 129, 0.3)"
          }
        }
      }
    },
    "cards": {
      "default": {
        "bg": "#292524",
        "border": "1px solid #3D3835",
        "borderRadius": "12px",
        "padding": "20px"
      },
      "nested": {
        "bg": "#1C1917",
        "border": "1px solid #3D3835",
        "borderRadius": "12px",
        "padding": "20px"
      },
      "panel": {
        "bg": "#292524",
        "border": "1px solid #3D3835",
        "borderRadius": "16px",
        "padding": "32px"
      }
    },
    "badges": {
      "success": {
        "bg": "rgba(16, 185, 129, 0.15)",
        "text": "#6EE7B7",
        "border": "1px solid rgba(16, 185, 129, 0.25)",
        "padding": "4px 8px",
        "borderRadius": "4px",
        "fontFamily": "JetBrains Mono",
        "fontSize": "11px"
      },
      "accent": {
        "bg": "rgba(217, 119, 87, 0.15)",
        "text": "#E8A090",
        "border": "1px solid rgba(217, 119, 87, 0.25)"
      },
      "inactive": {
        "bg": "rgba(120, 113, 108, 0.15)",
        "text": "#A8A29E",
        "border": "1px solid rgba(120, 113, 108, 0.25)"
      }
    },
    "forms": {
      "input": {
        "bg": "#1C1917",
        "border": "1px solid #3D3835",
        "borderRadius": "8px",
        "padding": "10px 14px",
        "fontSize": "14px",
        "textColor": "#FAFAF9",
        "placeholderColor": "#57534E",
        "focusBorder": "#D97757",
        "focusRing": "0 0 0 2px rgba(217, 119, 87, 0.2)"
      },
      "select": {
        "sameAsInput": true,
        "iconColor": "#78716C"
      },
      "slider": {
        "track": "#3D3835",
        "fill": "#D97757",
        "thumb": "#FAFAF9"
      },
      "label": {
        "fontSize": "14px",
        "fontWeight": 500,
        "color": "#E7E5E4",
        "marginBottom": "6px"
      }
    },
    "statsCard": {
      "bg": "#1C1917",
      "border": "1px solid #3D3835",
      "borderRadius": "12px",
      "padding": "16px",
      "value": {
        "fontFamily": "JetBrains Mono",
        "fontSize": "24px",
        "fontWeight": 600
      },
      "label": {
        "fontSize": "12px",
        "color": "#78716C",
        "marginTop": "4px"
      },
      "variants": {
        "success": { "valueColor": "#6EE7B7" },
        "info": { "valueColor": "#93C5FD" },
        "warning": { "valueColor": "#FCD34D" },
        "accent": { "valueColor": "#D97757" }
      }
    },
    "console": {
      "bg": "#000000",
      "border": "1px solid #292524",
      "borderRadius": "12px",
      "padding": "20px",
      "fontFamily": "JetBrains Mono",
      "fontSize": "13px",
      "lineHeight": 1.5,
      "colors": {
        "info": "#93C5FD",
        "success": "#6EE7B7",
        "warning": "#FCD34D",
        "error": "#FCA5A5",
        "muted": "#78716C"
      }
    },
    "header": {
      "bg": "#292524",
      "borderBottom": "1px solid #3D3835",
      "padding": "24px 32px",
      "title": {
        "fontSize": "24px",
        "fontWeight": 600,
        "color": "#FAFAF9"
      },
      "subtitle": {
        "fontSize": "14px",
        "color": "#78716C"
      }
    }
  },
  "layout": {
    "maxWidth": "1400px",
    "containerPadding": "32px",
    "grid": {
      "accounts": "2 columns on large screens, 1 on mobile",
      "stats": "4 columns on large, 2 on tablet, 1 on mobile",
      "mainContent": "3 columns (2 for accounts, 1 for sidebar)"
    },
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px"
    }
  },
  "motion": {
    "transitions": {
      "default": "all 0.15s ease",
      "hover": "all 0.15s ease",
      "expand": "all 0.2s ease-out"
    },
    "principles": [
      "Subtle, functional animations only",
      "No decorative or attention-grabbing motion",
      "Hover states should feel responsive but not flashy"
    ]
  },
  "accessibility": {
    "colorContrast": {
      "textOnDark": "Minimum 4.5:1 ratio for body text",
      "headingsOnDark": "Minimum 3:1 ratio for large text",
      "note": "All semantic colors have been chosen to meet WCAG AA on dark backgrounds"
    },
    "focusStates": {
      "style": "2px solid #D97757 with 2px offset",
      "outline": "Must be visible on all interactive elements"
    },
    "touchTargets": {
      "minimum": "44px for mobile",
      "buttons": "Adequate padding for touch"
    }
  },
  "existingFeatures": {
    "header": {
      "title": "XHS Multi-Account Scraper",
      "subtitle": "Manage accounts and scrape Xiaohongshu posts"
    },
    "statsPanel": {
      "metrics": ["Total Accounts", "Open Browsers", "Total Scraped", "Active Tasks"]
    },
    "actionButtons": [
      { "label": "+ Add New Account", "type": "success" },
      { "label": "Open All Browsers", "type": "info" },
      { "label": "Close All Browsers", "type": "warning" }
    ],
    "accountCards": {
      "fields": ["account_id", "nickname", "status (browser_open)", "last_scraped"],
      "actions": ["Open Browser", "Close Browser", "Delete"]
    },
    "scrapeForm": {
      "fields": [
        { "name": "account", "type": "select", "label": "Select Account" },
        { "name": "keyword", "type": "text", "label": "Search Keyword", "placeholder": "e.g., 咖啡, 美食, 旅行" },
        { "name": "maxPosts", "type": "slider", "label": "Max Posts", "range": "5-100" },
        { "name": "minLikes", "type": "number", "label": "Min Likes Filter" }
      ],
      "actions": ["Start Scraping", "Stop"]
    },
    "logConsole": {
      "purpose": "Real-time scraping progress",
      "features": ["Streaming logs", "Color-coded log levels", "Auto-scroll"]
    },
    "resultsViewer": {
      "features": ["File list", "File size", "JSON preview", "Delete button"]
    }
  }
}